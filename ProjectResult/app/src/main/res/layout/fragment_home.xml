<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <fragment
        android:id="@+id/nutirent"
        android:name="com.example.projectresult.ui.home.NutrientFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        tools:layout="@layout/fragment_subhome_nutrient" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/today_food"
        android:textSize="30dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="#ffffff"/>

    <fragment
        android:id="@+id/pic"
        android:name="com.example.projectresult.ui.home.EatenListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        tools:layout="@layout/fragment_subhome_eaten_list" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <ImageButton
            android:id="@+id/open_camera"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
            android:background="@color/colorAccent"
            android:layout_margin="10dp"/>
    </FrameLayout>
</LinearLayout>